                function experiencia(anos) {
                if (anos >= 0 && anos <= 1) {
                    return 'iniciante'; }
                else if (anos >= 3 && anos <= 1) {
                    return 'intermediario'; }
                else if (anos >= 3 && anos <= 6) {
                    return 'Avançado'; }
                else if (anos >= 7) {
                    return 'Jedi'; };
                }
                var anos = 5;
                var z = experiencia(anos);
                console.log(z); 

